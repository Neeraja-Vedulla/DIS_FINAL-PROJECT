@{
    ViewData["Title"] = "Services";
}
@section Styles {
    <link rel="stylesheet" href="~/css/package.css" />
}

<!-- Navbar -->
<nav>
    <div class="nav-container">
        <!-- Logo Section -->
        <div class="logo-container">
            <h1><span class="explore">Explore</span><span class="world">World</span></h1>
            <h2>Where Every Journey Begins</h2>
        </div>
        <ul class="nav-links">
            <li><a asp-action="Index" asp-controller="Home">Home</a></li>
            <li><a asp-action="Services" asp-controller="Home">Services</a></li>
            <li><a asp-action="About" asp-controller="Home">About Us</a></li>
            <li><a asp-action="Contact" asp-controller="Home">Contact</a></li>
        </ul>
    </div>
</nav>

<!-- Main Content -->
<div class="container">
    <h1>Tourism Packages</h1>

    <!-- Package Selection -->
    <div class="package-selection">
        <label for="packageDropdown">Choose a Package:</label>
        <select id="packageDropdown" onchange="showPackageDetails()">
            <option value="">Select Package</option>
            <option value="france">France Getaway</option>
            <option value="ireland">Ireland Adventure</option>
            <option value="singapore">Singapore Dream</option>
        </select>
    </div>

    <!-- Package Details -->
    <div id="packageDetails" class="package-details" style="display:none;"></div>

    <!-- Appointment Form -->
    <div id="appointmentForm" class="appointment-form" style="display:none;">
        <h2>Enter Your Details</h2>
        <form id="appointmentFormContent" onsubmit="bookAppointment(event)">
            <label for="name">Name:</label>
            <input type="text" id="name" required>

            <label for="phone">Phone Number:</label>
            <input type="tel" id="phone" pattern="[0-9]{10}" required>

            <label for="email">Email ID:</label>
            <input type="email" id="email" required>

            <label for="spots">Number of Spots:</label>
            <input type="number" id="spots" min="1" required>

            <button type="submit">Book Appointment</button>
        </form>
    </div>

    <!-- Edit Appointment Section -->
    <section id="editSection" class="edit-section" style="display: none;">
        <h2>Edit Booking</h2>
        <form id="editForm" onsubmit="saveEdit(event)">
            <label for="editName">Name:</label>
            <input type="text" id="editName" required>

            <label for="editPhone">Phone:</label>
            <input type="tel" id="editPhone" pattern="[0-9]{10}" required>

            <label for="editEmail">Email:</label>
            <input type="email" id="editEmail" required>

            <label for="editSpots">Number of Spots:</label>
            <input type="number" id="editSpots" min="1" required>

            <button type="submit" class="btn-submit">Save Changes</button>
            <button type="button" onclick="cancelEdit()" class="btn-cancel">Cancel</button>
        </form>
    </section>

    <!-- Overlay and Modal for Confirmation Messages -->
    <div class="overlay" id="overlay" style="display: none;"></div>
    <div class="modal" id="modal" style="display: none;">
        <p></p>
        <button onclick="closeModal()">Close</button>
    </div>
</div>

<script src="~/js/package.js"></script>
